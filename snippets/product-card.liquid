<div class="col">
    <div class="card shadow-sm">
        <div class="card-img-top p-2 rounded-5">
            <img src="{{ product.featured_image.src | img_url: 'large' }}" style="object-fit: cover; height: 200px;"
                class="w-100 rounded-5" alt="{{ product.featured_image.alt | escape }}" />
        </div>
        <div class="card-body ">
            <div class="d-flex justify-content-between align-items-center">
                <p class="rounded-pill px-md-2 text-dark fw-bold">{{ product.price | money }}</p>
                <p class="rounded-pill bg-warning px-3 text-dark">{% if product.available %} sale {% else %}
                    sold out {%
                    endif
                    %}</p>
            </div>
            <p class="card-title fs-6 fs-md-4 fw-bold text-truncate">{{ product.title }}</p>
            <a href="{{ product.url | within: collection }}"
                class="btn bg-info w-100 fw-bold d-flex align-items-center justify-content-center gap-2"> {%
                include
                'cart-icon' %} Buy
                now</a>
        </div>
    </div>
</div>